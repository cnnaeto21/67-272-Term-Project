<div class="card">
  <div class="card-content">
    <h4><%= state.capitalize %> Jobs </h4>

    <% if jobs.empty? %>
      <p>There are no <%= state.downcase %> jobs at this time.</p>
    <% else %>

      <table class="striped highlight">
        <thead>
          <th>Name</th>
          <th>Number of Shifts</th>
          <th class="align_center">Options</th>
        </thead>
        <% for job in jobs %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to job.name, job_path(job) %></td>
            <td><%=job.shift_jobs.count %></td>

          <td class="align_center">
            <%= link_to edit_job_path(job) do %>
              <i class="material-icons">edit</i>
            <% end %>
          </td>
          <td class="align_center">
            <%= link_to(jobs_path(job), method: :delete, data: { confirm: 'Are you sure you wish to delete this job?' }) do %>
                <i class="material-icons">delete</i>
            <% end %>
          </td>
          </tr>
        <% end %>
      </table>
      <p class="supertiny"></p>
      <br />
      <%= will_paginate jobs, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
    <% end %>
  </div>
</div>