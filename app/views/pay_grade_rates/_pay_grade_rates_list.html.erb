<div class="card">
  <div class="card-content">
    <h5><%= state.capitalize %> Rates</h5>

    <% if rates.empty? %>
      <p>There are no <%= state.downcase %> pay rates at this time.</p>
    <% else %>

      <table class="striped highlight">
        <thead>
          <th>Pay Grade</th>
          <th>Rate</th>
          <th>Dates</th>
        </thead>
        <% rates.each do |rate| %>
          <tr %>
            <td><%= rate.pay_grade.level %></td>
            <td><%= rate.rate %></td>
            <td><%= rate.start_date.strftime("%-m/%-d/%y") %> - <%= rate.end_date.nil? ? 'Present' : rate.end_date.strftime("%-m/%-d/%y") %></td>
          </tr>
        <% end %>
      </table>
      <p class="supertiny"></p>
      <br />
      <%= will_paginate rates, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
      <br />
    <% end %>
  </div>
</div>