
<%= simple_form_for :payroll, url: store_calc_path, method: :post, local:true do |p| %>
    <%= p.input :store_id, collection: Store.active.alphabetical %>
    <%= p.collection_radio_buttons :options, [[2.weeks.ago, '2 weeks'] ,[1.month.ago, '1 month']], :first, :last %>
    <%= p.input :start, label_html:{ class: 'datepicker'} %>
    <%= p.input :end, label_html:{ class: 'datepicker'} %>
    <%= p.submit "Generate Pay Roll" %>
<% end %>
