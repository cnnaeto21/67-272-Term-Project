<%= simple_form_for :payroll, url: store_calc_path , method: :get, local:true do |p| %>
    <%= p.input :store_id, collection: Store.active.alphabetical%>
    <%= p.collection_radio_buttons :options, [[2.weeks.ago.to_date, '2 weeks'] ,[1.month.ago.to_date, '1 month']], :first, :last, { item_wrapper_tag: true }%>
    <%= p.input :start, input_html:{ class: 'datepicker'} %>
    <%= p.input :end, input_html:{ class: 'datepicker'} %>
    <%= p.submit "Generate Pay Roll"  %>
 <% end %>
 
 